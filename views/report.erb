<?xml version="1.0" encoding="UTF-8"?>
<validity outcome="<%= @result['outcome'] %>">
  <package_syntax>
    <package_is_directory outcome="<%= @result['syntax']['package_is_directory'] %>" />
    <descriptor_found outcome="<%= @result['syntax']['descriptor_found'] %>" />
    <descriptor_is_file outcome="<%= @result['syntax']['descriptor_is_file'] %>" />
    <content_file_found outcome="<%= @result['syntax']['content_file_found'] %>" />
  </package_syntax>
  <descriptor_validation>
    <descriptor_valid outcome="<%= @result['descriptor_validation']['descriptor_valid']%>" />
  </descriptor_validation>
  <account_project_validation>
    <account_project_valid outcome="<%= @result['account_project_validation']['account_project_valid'] %>" />
  </account_project_validation>
  <virus_check>
<% @result['virus_check'].each do |key, value| %> 
    <virus_check_file outcome="<%= value['outcome'] %>" path="<%= key %>" virus_checker_executable="<%= value['virus_checker_executable'] %>"/>
<% end %>
  </virus_check>
  <checksum_check>
  <% @result['checksum_check'].each do |key, value| %>
    <file_exists outcome="<%= value["file_exists"] %>" path="<%= key %> " />
    <% if value["file_exists"] == "success" %>
      <% if value["checksum_match"] == "success" %>
        <checksum_match outcome="<%= value["checksum_match"] %>" path="<%= key %>" />
      <% else %>
        <checksum_match outcome="<%= value["checksum_match"] %>" path="<%= key %>" described="<%= value["described"] %>" computed="<%= value["computed"] %>" />
      <% end %>
    <% end %>
  <% end %>
  </checksum_check>
</validity>
