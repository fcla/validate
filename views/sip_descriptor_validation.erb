<event>
  <eventIdentifier>
    <eventIdentifierType>URI</eventIdentifierType>
    <eventIdentifierValue><%= "#{@wip.uri}/event/sip-descriptor-validation" %></eventIdentifierValue>
  </eventIdentifier>
  <eventType>sip descriptor validation</eventType>
  <eventDateTime><%= Time.now.xmlschema %></eventDateTime>
  <eventOutcomeInformation>
  <eventOutcome><%= 
  valid = @wip.sip_descriptor_valid?
  if valid
    'valid'
  else
    @any_errors = true
    'invalid'
  end %></eventOutcome>
  <% if @wip.sip_descriptor_valid? %>
    <eventOutcomeDetail>
      <eventOutcomeDetailNote>
      <% @wip.sip_descriptor_errors.each do |e| %>
        <%= "line #{e[:line]}: #{e[:message]}" %>
      <% end %>
      </eventOutcomeDetailNote>
    </eventOutcomeDetail>
  <% end %>
  </eventOutcomeInformation>
  <linkingObjectIdentifier>
    <linkingObjectIdentifierType>URI</linkingObjectIdentifierType>
    <linkingObjectIdentifierValue><%= @wip.uri %></linkingObjectIdentifierValue>
  </linkingObjectIdentifier>
  <linkingAgentIdentifier>
    <linkingAgentIdentifierType>URI</linkingAgentIdentifierType>
    <linkingAgentIdentifierValue>info:fcla/archive/service/validation</linkingAgentIdentifierValue>
  </linkingAgentIdentifier>
</event>
